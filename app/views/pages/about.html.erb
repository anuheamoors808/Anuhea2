<div class="app-card-container">
  <div class="card">
    <h1>About</h1>

    <hr>
    
    <div class="row">
      <div class="col-md-4">
        <%= image_tag "chicken.jpg", width: 500, alt: "profile image", class: 'profile-img' %>
        
        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
               <div
                 class="progress-bar progress-bar-striped bg-warning"
                 role="progressbar"
                 aria-valuenow="<%= skill.percent_utilized %>"
                 aria-valuemax="100"
                 style="width: <%= skill.percent_utilized %>%"
                ></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="col-md-8">
        <p> ABOUT WHO? ABOUT ME</p>
        
        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#experience"
            aria-expanded="false"
            aria-controller="experience"
          >
            Experience
          </button>
          
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#experience"
            aria-expanded="false"
            aria-controller="experience"
          >
            Education
          </button>
        </p>
        
        <p>
          <div class="collapse" id="experience">
            <div class="card card-block">
              EXPEEERIIEEENNCCCEEEEEEE
            </div>
            <div class="card card-block">
              MORE EXPEEERIIEEENNCCCEEEEEEE
            </div>
          </div>
          
          <div class="collapse" id="education">
            <div class="card card-block">
              SCHOOOOOOOOOOL
            </div>
            <div class="card card-block">
              MORE SCHOOOOOOOOOOL
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>